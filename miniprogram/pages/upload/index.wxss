.container {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding: 20px 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.image-container {
  height: 225px;
  width: 300px;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 4px;
  margin-bottom: 20px;
  overflow: hidden;
}
.image-container > .button {
  height: 50px;
  width: 50px;
}
.image-container > .preimage {
  height: 100%;
  width: 100%;
}
.add-container {
  height: 30px;
  width: 300px;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}
.add-container > input {
  box-sizing: border-box;
  height: 30px;
  line-height: 28px;
  flex-grow: 1;
  padding-left: 5px;
  font-size: 14px;
  border: 2px solid #57a99a;
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
}
.add-container > view {
  height: 100%;
  line-height: 26px;
  text-align: center;
  width: 60px;
  box-sizing: border-box;
  background: #57a99a;
  color: #ffffff;
  font-size: 14px;
  border: 2px solid #57a99a;
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
}
.keyword-container {
  width: 300px;
  padding: 10px;
}
.add-button {
  height: 40px;
  line-height: 40px;
  text-align: center;
  width: 300px;
  background: #57a99a;
  color: #ffffff;
  border-radius: 4px;
  position: absolute;
  bottom: 20px;
  left: 0;
  right: 0;
  margin: auto;
}
.add-button.disable {
  background: #e7e7e7;
  color: #fff;
}
.add-placeholder {
  font-size: 14px;
}