.mini-icon {
  height: 15px;
  width: 15px;
  vertical-align: middle;
  margin: 0 -4px;
}
.container {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding: 20px 0 0 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: #eeeeee;
}
.avator-container {
  height: 100px;
  width: 95%;
  background-color: #57a99a;
  border-radius: 5px;
  overflow: hidden;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.avator {
  height: 60px;
  width: 60px;
  min-width: 60px;
  border-radius: 50%;
  margin: 0 10px;
}
.info-container {
  height: 80px;
  flex-grow: 1;
  margin-right: 10px;
  
}
.info-container > .name {
  font-size: 16px;
  margin-bottom: 5px;
  color: #ffffff;
}
.info-container > .info {
  font-size: 12px;
  color: #000;
}
.info-container > .info > i {
  color: #ffffff;
}

.menu-container {
  flex-grow: 1;
  width: 100%;
  overflow: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.menu-item {
  height: 50px;
  width: 100%;
  box-sizing: border-box;
  padding: 0 10px;
  line-height: 50px;
  font-size: 14px;
  background: #ffffff;
  color: #666;
  margin: 1px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.menu-item > view {
  display: flex;
  justify-content: center;
  align-items: center;
}
.menu-item > view > image {
  height: 15px;
  width: 15px;
  margin-right: 3px;
}
.menu-item.title {
  background: none !important;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
}
.number {
  height: 20px;
  font-size: 12px;
  padding: 0 5px;
  color: #ffffff;
  background: #666;
  border-radius: 5px;
}