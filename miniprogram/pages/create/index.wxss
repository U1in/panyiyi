.container {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding: 20px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
input,
textarea {
  height: 40px;
  width: 100%;
  border-bottom: 1px solid #e7e7e7;
  margin: 10px 0;
  font-size: 14px;
}
textarea {
  height: 200px;
}
.placeholder-style {
  font-size: 14px;
}
.add-button {
  height: 40px;
  line-height: 40px;
  text-align: center;
  width: 300px;
  background: #57a99a;
  color: #ffffff;
  border-radius: 4px;
  position: absolute;
  bottom: 20px;
  left: 0;
  right: 0;
  margin: auto;
}
.add-button.disable {
  background: #e7e7e7;
  color: #fff;
}