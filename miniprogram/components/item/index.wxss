.line {
  display: block;
  height: 1px;
  width: 100%;
  background: #e7e7e7;
  margin: 2px 0;
}
.hot-item {
  width: 100%;
  height: 330px;
  box-sizing: border-box;
  padding: 5px;
  /* border-radius: 8px; */
  overflow: hidden;
  background-color: #ffffff;
  margin: 10px 0;
}
.title {
  height: 30px;
  width: 100%;
  box-sizing: border-box;
  padding-left: 5px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
}
.title > view {
  font-size: 12px;
  color: #ffffff;
  background-color: #57a99a;
  margin: 0 5px;
  border-radius: 4px;
  padding: 2px 5px;
}
.image-container {
  height: 240px;
  width: 100%;
  box-sizing: border-box;
  margin: 10px 0;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #e7e7e7;
  border-radius: 3px;
  position: relative;
}
.image-container >  text {
  font-size: 14px;
  color: #57a99a;
}
.image-container > image {
  width: 100%;
  position: absolute;
  top: 0;
  right: 0;
  background-color: #ffffff;
}
.hot-button {
  height: 25px;
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
}
.button-item {
  height: 100%;
  line-height: 12px;
  width: 33%;
  color: #666;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.button-item > image {
  height: 15px;
  width: 15px;
  margin-right: 5px;
}
.button-item > text {
  height: 15px;
  line-height: 15px;
}