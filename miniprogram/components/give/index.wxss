.image-item {
  height: auto;
  width: 100%;
  box-sizing: border-box;
  padding: 5px;
  background: #ffffff;
  border-radius: 5px;
  margin: 5px;
  box-shadow: 0 0 5px #666;
}
.image-container {
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.image-container > image {
  height: 100px;
  width: 100px;
  border-radius: 3px;
}
.mini-icon {
  height: 15px;
  width: 15px;
  vertical-align: middle;
  margin: 0 -2px;
}
.number-container {
  width: 100%;
  font-size: 12px;
  color: #666;
}
.number-container > view {
  width: 100%;
  box-sizing: border-box;
  padding: 0 5px;
  overflow: hidden;
}
.line {
  display: block;
  height: 1px;
  width: 100%;
  background: #c9c9c9;
  margin: 2px 0;
}