.hint-container {
  background: #e7e7e7;
  width: 100%;
  height: 25px;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}
.hint-container > .line {
  background: #cccccc;
  height: 1px;
  flex-grow: 1;
}
.hint-container > .info {
  height: 100%;
  padding: 0 4px;
  background: #e7e7e7;
  font-size: 12px;
  color: #b8b8b8;
  line-height: 25px;
  text-align: center;
  box-sizing: border-box;
}